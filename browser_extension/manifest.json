{
    "manifest_version": 2,
    "name": "DOI to SciHub redirection",
    "version": "0.1",

    "description": "Converts DOI to SciHub links, in the webpage. Direct access to SciHub",
    "icons": {
        "48": "icons/icon_48.png",
        "96": "icons/icon_96.png"
    },

    "content_scripts": [
    {
      "matches": [
         "<all_urls>"
      ],
      "js": ["content.js"]
    }
    ]
}
